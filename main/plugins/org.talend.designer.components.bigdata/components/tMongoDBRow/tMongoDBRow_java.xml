<COMPONENT>
  	<HEADER
	    PLATEFORM="ALL"
	    SERIAL=""
	    VERSION="0.102"
	    STATUS="ALPHA"

	    COMPATIBILITY="ALL"
	    AUTHOR="Talend"
	    RELEASE_DATE="20120706A"
	    STARTABLE="true"
		PARTITIONING="NONE"
		LOG4J_ENABLED="true"
  	>
    	<SIGNATURE/>
  	</HEADER>
	<FAMILIES>
		<FAMILY>Databases/MongoDB</FAMILY>
		<FAMILY>Big Data/MongoDB</FAMILY>
	</FAMILIES>
	<DOCUMENTATION>
		<URL />
	</DOCUMENTATION>
	<CONNECTORS>
	    <CONNECTOR CTYPE="FLOW" MAX_INPUT="1" MAX_OUTPUT="0"/>
	    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1"/>
	    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
	    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
	    <CONNECTOR CTYPE="COMPONENT_OK"/>
	    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
	    <CONNECTOR CTYPE="RUN_IF"/>
	</CONNECTORS>

	<PARAMETERS>
	    <PARAMETER NAME="PROPERTY" FIELD="PROPERTY_TYPE" NUM_ROW="1" REPOSITORY_VALUE="NOSQL:MONGODB" SHOW_IF="USE_EXISTING_CONNECTION == 'false'"/>
		<PARAMETER
			NAME="USE_EXISTING_CONNECTION"
			FIELD="CHECK"
			NUM_ROW="2"
			GROUP="CONNECTION"
		>
			<DEFAULT>false</DEFAULT>
		</PARAMETER>
		<PARAMETER
			NAME="CONNECTION"
			FIELD="COMPONENT_LIST"
			REQUIRED="true" FILTER="tMongoDBConnection"
			NUM_ROW="2"
			SHOW_IF="USE_EXISTING_CONNECTION == 'true'"
			GROUP="CONNECTION"
		/>
        <PARAMETER
            NAME="DB_VERSION"
            FIELD="CLOSED_LIST"
            REPOSITORY_VALUE="DB_VERSION"
            NUM_ROW="3"
            SHOW_IF="(USE_EXISTING_CONNECTION == 'false')"
            GROUP="CONNECTION">
            <ITEMS DEFAULT="MONGODB_2_1_2">
                <ITEM NAME="MONGODB_2_1_2" VALUE="MONGODB_2_1_2"/>
                <ITEM NAME="MONGODB_2_2_3" VALUE="MONGODB_2_2_3"/>
            	<ITEM NAME="MONGODB_2_4_X" VALUE="MONGODB_2_4_X"/>
                <ITEM NAME="MONGODB_2_5_X" VALUE="MONGODB_2_5_X"/>
                <ITEM NAME="MONGODB_2_6_X" VALUE="MONGODB_2_6_X"/>
            </ITEMS>
        </PARAMETER>
		<PARAMETER
            FIELD="CHECK"
            NAME="USE_REPLICA_SET"
            REPOSITORY_VALUE="USE_REPLICA_SET"
            NUM_ROW="4"
            SHOW_IF="(USE_EXISTING_CONNECTION == 'false')"
            GROUP="CONNECTION">
            <DEFAULT>"false"</DEFAULT>
        </PARAMETER>
        <PARAMETER
            NAME="REPLICA_SET"
            FIELD="TABLE"
            REPOSITORY_VALUE="REPLICA_SET"
            REQUIRED="true"
            NUM_ROW="5"
            NB_LINES="5"
            SHOW_IF="(USE_EXISTING_CONNECTION == 'false') AND (USE_REPLICA_SET=='true')"
            GROUP="CONNECTION">
            <ITEMS>
                <ITEM NAME="REPLICA_HOST" FIELD="TEXT" />
                <ITEM NAME="REPLICA_PORT" FIELD="TEXT" />
            </ITEMS>
        </PARAMETER>
		<PARAMETER
			FIELD="TEXT"
			NAME="HOST"
			REPOSITORY_VALUE="HOST"
			NUM_ROW="6"
			REQUIRED="true"
			SHOW_IF="(USE_EXISTING_CONNECTION == 'false') AND (USE_REPLICA_SET=='false')"
			GROUP="CONNECTION"
		>
			<DEFAULT>"localhost"</DEFAULT>
		</PARAMETER>
		<PARAMETER
			FIELD="TEXT"
			NAME="PORT"
			REPOSITORY_VALUE="PORT"
			NUM_ROW="6"
			SHOW_IF="(USE_EXISTING_CONNECTION == 'false') AND (USE_REPLICA_SET=='false')"
			GROUP="CONNECTION"
		>
			<DEFAULT>27017</DEFAULT>
		</PARAMETER>
		<PARAMETER
			FIELD="TEXT"
			NAME="DATABASE"
			REPOSITORY_VALUE="DATABASE"
			NUM_ROW="7"
			REQUIRED="true"
			SHOW_IF="USE_EXISTING_CONNECTION == 'false'"
			GROUP="CONNECTION"
		>
			<DEFAULT>""</DEFAULT>
		</PARAMETER>
        <PARAMETER FIELD="CHECK" NAME="USE_SSL" REPOSITORY_VALUE="USE_SSL" NUM_ROW="8" SHOW_IF="(USE_EXISTING_CONNECTION == 'false') AND (DB_VERSION=='MONGODB_2_4_X' OR DB_VERSION=='MONGODB_2_5_X' OR DB_VERSION=='MONGODB_2_6_X')" GROUP="CONNECTION">
            <DEFAULT>"false"</DEFAULT>
        </PARAMETER>

		<PARAMETER
			NAME="REQUIRED_AUTHENTICATION"
			FIELD="CHECK"
			REPOSITORY_VALUE="REQUIRED_AUTHENTICATION"
			NUM_ROW="12"
			SHOW_IF="USE_EXISTING_CONNECTION == 'false'"
			GROUP="AUTHENTICATION"
		>
			<DEFAULT>false</DEFAULT>
		</PARAMETER>
		<PARAMETER
			FIELD="TEXT"
			NAME="USERNAME"
			REPOSITORY_VALUE="USERNAME"
			NUM_ROW="13"
			SHOW_IF="(REQUIRED_AUTHENTICATION == 'true') AND (USE_EXISTING_CONNECTION == 'false')"
			GROUP="AUTHENTICATION"
		>
			<DEFAULT>""</DEFAULT>
		</PARAMETER>
		<PARAMETER
			FIELD="PASSWORD"
			NAME="PASSWORD"
			REPOSITORY_VALUE="PASSWORD"
			NUM_ROW="13"
			SHOW_IF="(REQUIRED_AUTHENTICATION == 'true') AND (USE_EXISTING_CONNECTION == 'false')"
			GROUP="AUTHENTICATION"
		>
			<DEFAULT>""</DEFAULT>
		</PARAMETER>
		<PARAMETER
			NAME="SCHEMA_FLOW"
			FIELD="SCHEMA_TYPE"
			NUM_ROW="16"
		>
			<DEFAULT>""</DEFAULT>
		</PARAMETER>
		<PARAMETER
			NAME="EXECUTE_COMMAND"
			FIELD="CHECK"
			NUM_ROW="21"
		>
			<DEFAULT>false</DEFAULT>
		</PARAMETER>
		<PARAMETER
			FIELD="TEXT"
			NAME="COMMAND"
			REQUIRED="true"
			NUM_ROW="26"
			SHOW_IF="(EXECUTE_COMMAND == 'true')"
		>
			<DEFAULT>""</DEFAULT>
		</PARAMETER>
		<PARAMETER
			FIELD="MEMO"
			NAME="FUNCTION"
			REQUIRED="true"
			NUM_ROW="31"
			NB_LINES="5"
			SHOW_IF="(EXECUTE_COMMAND =='false')"
		>
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER
			NAME="FUNCTION_PARAMETERS"
			FIELD="TABLE"
			REQUIRED="false"
			NUM_ROW="32"
			NB_LINES="5"
			SHOW_IF="(EXECUTE_COMMAND =='false')"
		>
			<ITEMS>
				<ITEM NAME="PARAMETER" />
			</ITEMS>
		</PARAMETER>
		<PARAMETER
			NAME="DIE_ON_ERROR"
			FIELD="CHECK"
			NUM_ROW="36">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>
	</PARAMETERS>

	<ADVANCED_PARAMETERS />

	<CODEGENERATION>
		<IMPORTS>
			<IMPORT MODULE="mongo-2.8.0.jar" MVN="mvn:org.talend.libraries/mongo-2.8.0/6.0.0"  NAME="mongo-2.8.0" UrlPath="platform:/plugin/org.talend.libraries.mongo/lib/mongo-2.8.0.jar" REQUIRED_IF="(DB_VERSION=='MONGODB_2_1_2' OR DB_VERSION=='MONGODB_2_2_3') AND (USE_EXISTING_CONNECTION == 'false')" />
			<IMPORT MODULE="mongo-java-driver-2.11.2.jar" MVN="mvn:org.talend.libraries/mongo-java-driver-2.11.2/6.0.0"  NAME="mongo-2.11.2" UrlPath="platform:/plugin/org.talend.libraries.mongo/lib/mongo-java-driver-2.11.2.jar" REQUIRED_IF="(DB_VERSION=='MONGODB_2_4_X' OR DB_VERSION=='MONGODB_2_5_X') AND (USE_EXISTING_CONNECTION == 'false')" />
            <!-- mongo java driver 2.12.0 give the compatibility with the new features of mongoDB 2.6 -->
            <IMPORT MODULE="mongo-java-driver-2.12.2.jar" MVN="mvn:org.talend.libraries/mongo-java-driver-2.12.2/6.0.0"  NAME="mongo-2.12.2" UrlPath="platform:/plugin/org.talend.libraries.mongo/lib/mongo-java-driver-2.12.2.jar" REQUIRED_IF="(DB_VERSION=='MONGODB_2_6_X') AND (USE_EXISTING_CONNECTION == 'false')" />
		</IMPORTS>
	</CODEGENERATION>
	<RETURNS/>
</COMPONENT>
